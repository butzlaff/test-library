// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Authors {
  id       Int      @id @default(autoincrement())
  name     String
  birth    DateTime
  bio      String
  createAt DateTime @default(now())

  dataBook   DataBook @relation(fields: [dataBookId], references: [id])
  dataBookId Int
}

model DataBook {
  id         Int      @id @default(autoincrement())
  name       String
  launchDate DateTime
  category   String

  Authors Authors[]
}
